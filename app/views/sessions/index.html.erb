<% if notice %>
  <div class="alert alert-danger w-50 mx-auto" role="alert">
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-info w-50 mx-auto" role="alert">
    <%= alert %>
  </div>
<% end %>

<div class="card w-50 mx-auto">
  <div class="card-header text-center">
    Sign In
  </div>
  <div class="card-body">
    <%= form_with url: login_path do |form| %>

    <div class="form-group row mb-3">
      <div class="col-md-2"><%= form.label :email %></div>
      <div class="col-md-8">
        <%= form.text_field :email, class: "form-control", placeholder: "flex@gmail.com" %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <div class="col-md-2"><%= form.label :password %></div>
      <div class="col-md-8">
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
      </div>
    </div>

    <div class="text-center">
        <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div
    <% end %>
  </div>
  <div class="card-footer text-center">
    <p>Don't have an acount? <%= link_to "Sing Up!", '/register' %> <p>
  </div>
</div>
