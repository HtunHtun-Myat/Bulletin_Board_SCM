<% if @user.errors.any? %>
  <div class="alert alert-danger w-50 mx-auto" role="alert">
    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="card w-50 mx-auto">
  <div class="card-header text-center">
    User Registration
  </div>
  <div class="card-body">
    <form action="/register" accept-charset="UTF-8" method="post">
      <input type="hidden" name="authenticity_token" value="register_post_action_token">

      <div class="form-group row mb-3">
        <div class="col-md-2"> <label for="user_name">Name</label> </div>
        <div class="col-md-8"><input class="form-control" type="text" name="user[name]" id="user_name"></div>
      </div>

      <div class="form-group row mb-3">
        <div class="col-md-2"> <label for="user_email">Email</label> </div>
        <div class="col-md-8"><input class="form-control" type="text" name="user[email]" id="user_email"></div>
      </div>

      <div class="form-group row mb-3">
        <div class="col-md-2"> <label for="user_password">Password</label> </div>
        <div class="col-md-8"><input class="form-control" type="password" name="user[password]" id="user_password"></div>
      </div>

      <div class="form-group row mb-0">
        <div class="col-md-12 text-center">
          <input type="submit" name="commit" value="Register" class="btn btn-primary" data-disable-with="Create User">
          <button name="button" type="reset" class="btn btn-primary">Clear</button>
        </div>
      </div>
   </form>
  </div>
</div>