<div class="card">
  <div class="card-header">
    User Detail
  </div>
  <div class="card-body">
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">Name</label>
      <div class="col-sm-10">
        <label for="name" class="col-sm-10 col-form-label"><%= @user.name %></label>
      </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <label for="staticEmail" class="col-sm-10 col-form-label"><%= @user.email %></label>
        </div>
    </div>
    <div class="form-group row">
      <label for="create-user" class="col-sm-2 col-form-label">Created @User</label>
      <div class="col-sm-10">
          <label for="create-user" class="col-sm-10 col-form-label">
          <%= @user.created_user == 1 ? 'Admin' : @user.name %>
          </label>
      </div>
    </div>
    <div class="form-group row">
        <label for="create-date" class="col-sm-2 col-form-label">Created Date</label>
        <div class="col-sm-10">
            <label for="create-date" class="col-sm-10 col-form-label"><%= @user.created_at.strftime('%Y/%m/%d') %></label>
        </div>
    </div>
    <div class="form-group row">
        <label for="update-date" class="col-sm-2 col-form-label">Updated Date</label>
        <div class="col-sm-10">
            <label for="update-date" class="col-sm-10 col-form-label"><%= @user.updated_at.strftime('%Y/%m/%d') %></label>
        </div>
    </div>
  </div>
</div>
<%= link_to "Back", users_path ,class: "btn btn-success mt-3" %>
