<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row mb-3">
    <div class="col-md-2"> <%= form.label :name %> </div>
    <div class="col-md-6"><%= form.text_field :name, class: "form-control" %></div>
  </div>

  <div class="form-group row mb-3">
    <div class="col-md-2"> <%= form.label :email %> </div>
    <div class="col-md-6"><%= form.text_field :email, class: "form-control" %></div>
  </div>

  <div class="form-group row mb-3">
    <div class="col-md-2"> <%= form.label :password_digest %> </div>
    <div class="col-md-6"><%= form.password_field :password_digest, class: "form-control" %></div>
  </div>

  <div class="form-group row mb-0">
  <div class="col-md-6 offset-md-2">
    <%= form.submit :class => "btn btn-success" %>
    <%= button_tag "Clear", type: :reset, class: "btn btn-success" %>
  </div>
<% end %>
