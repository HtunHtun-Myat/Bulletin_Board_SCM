<%= form_with(model: user) do |form| %>
  <div class="form-group row mb-3">
    <div class="col-md-2"> <%= form.label :name %> </div>
    <div class="col-md-8"><%= form.text_field :name, class: "form-control" %></div>
  </div>

  <div class="form-group row mb-3">
    <div class="col-md-2"> <%= form.label :email %> </div>
    <div class="col-md-8"><%= form.text_field :email, class: "form-control" %></div>
  </div>

  <div class="form-group row mb-3">
    <div class="col-md-2"> <%= form.label :password %> </div>
    <div class="col-md-8"><%= form.password_field :password, class: "form-control" %></div>
  </div>

  <div class="form-group row mb-0">
  <div class="col-md-8 offset-md-2 text-center">
    <%= link_to "Back", users_path ,class: "btn btn-success" %>
    <%= form.submit :class => "btn btn-success" %>
    <%= button_tag "Clear", type: :reset, class: "btn btn-success" %>
  </div>
<% end %>
