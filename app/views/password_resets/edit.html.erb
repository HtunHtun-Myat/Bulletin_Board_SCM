<% if notice %>
  <div class="alert alert-danger w-50 mx-auto" role="alert">
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-info w-50 mx-auto" role="alert">
    <%= alert %>
  </div>
<% end %>

<% if @user.errors.any? %>
  <div class="alert alert-danger w-50 mx-auto" role="alert">
    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="card w-50 mx-auto">
  <div class="card-header text-center">
    Password Reset
  </div>
  <div class="card-body">
    <%= form_for @user, :url => password_reset_path(params[:id]) do |form| %>
    <div class="form-group row mb-3">
      <div class="col-md-5"><%= form.label :password %></div>
      <div class="col-md-7">
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
      </div>
    </div>

    <div class="form-group row mb-3">
      <div class="col-md-5"><%= form.label :password_confirmation %></div>
      <div class="col-md-7">
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "password" %>
      </div>
    </div>

    <div class="text-center">
        <%= form.submit "Update Password", class: "btn btn-primary" %>
    </div
    <% end %>
  </div>
</div>