<% if @post.errors.any? %>
  <div class="alert alert-danger w-50 mx-auto" role="alert">
    <ul>
      <% @post.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="card w-50 mx-auto">
  <div class="card-header">
    Create Post
  </div>
  <div class="card-body">
    <%= render "form", post: @post %>
  </div>
</div>
