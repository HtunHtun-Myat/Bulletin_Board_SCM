<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="col-md-2"> <%= form.label :title %> </div>
      <div class="col-md-8"><%= form.text_field :title, class: "form-control" %></div>
    </div>
  <br/>
  <div class="form-group row">
    <div class="col-md-2"> <%= form.label :description %> </div>
      <div class="col-md-8"> <%= form.text_area :description, class: "form-control" %> </div>
  </div>
  <br/>
  <div class="form-group row mb-0">
  <div class="col-md-8 offset-md-2 text-center">
    <%= form.submit :class => "btn btn-success" %>
    <%= button_tag "Clear", type: :reset, class: "btn btn-success" %>
  </div>
<% end %>